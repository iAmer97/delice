<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity"

    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:background="?android:attr/windowBackground"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:paddingLeft="10dp"
                    android:textAppearance="@style/ToolbarTitleTheme">
                </TextView>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/options"
                    android:src="@drawable/ic_shopbag"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bar"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:background="#FFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            tools:context=".PostingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancelPosting"
                android:layout_width="26dp"
                android:layout_height="22dp"
                android:layout_marginRight="160dp"
                android:src="@drawable/arrow_back"
                app:tint="@color/green"></ImageView>

            <Button
                android:id="@+id/upload"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:backgroundTint="#F8B316"
                android:fontFamily="@font/poppins_medium"
                android:text="upload"
                android:textColor="#FFFFFF" />

        </LinearLayout>

            <ImageSwitcher
                android:id="@+id/Image"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="348dp"
                android:layout_height="348dp"
                tools:ignore="MissingConstraints"
                android:background="@drawable/add_image"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="114dp">

            </ImageSwitcher>

            <EditText
                android:id="@+id/name"
                android:layout_width="348dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins_bold"
                android:hint="Your Recipe's Name"
                android:inputType="textPersonName"
                android:textColor="#4B846A"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="344dp" />

            <EditText
                android:id="@+id/RecDes"
                android:layout_width="348dp"
                android:layout_marginTop="12dp"
                android:layout_height="170dp"
                android:ems="10"
                android:hint="Recipe Description"
                android:fontFamily="@font/poppins"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="392dp" />

            <EditText
                android:id="@+id/tags"
                android:layout_width="348dp"
                android:layout_height="70dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="tags (seperate with space)"
                android:inputType="textPersonName"
                android:textColor="#D8CA60"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="344dp" />

            <EditText
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="left"
                android:layout_marginLeft="22dp"
                android:ems="10"
                android:hint="Number of servings"
                android:inputType="number"
                android:id="@+id/numberOfServings"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="619dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Ingredients"
                android:textColor="#4B846A"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="570dp" />

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">


            </LinearLayout>
            <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
            android:orientation="vertical"
            tools:context=".PostingActivity">

            </LinearLayout>

            <Button
                android:id="@+id/addbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_semibold"
                android:text="Add More Ingredients"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="22dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="12dp"
                android:text="Steps"
                android:textColor="#4B846A"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="570dp" />
            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical"
                tools:context=".PostingActivity">

            </LinearLayout>

            <Button
                android:id="@+id/addbtn2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_semibold"
                android:text="Add More Steps"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/post"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="#F8B316"
                android:fontFamily="@font/poppins_semibold"
                android:text="Publish"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </ScrollView>




</RelativeLayout>


